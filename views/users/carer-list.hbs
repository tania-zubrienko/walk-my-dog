<div class="container">
    <h1>Lista de todos los cuidadores</h1>
    <div class="row">
        <div class="col-lg-6 careerMap mb-5">
            <figure id="carerMap"></figure>
        </div>

        <div class="col-lg-6">
            <div class="row">
                {{#each users}}
                <div class="col-4">
                    <div class="card mb-5" style="width: 10rem;">

                        <img class="card-img-top" src="/images/holaaa.jpeg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{name}}</h5>
                            <p class="card-text">{{description}}</p>
                            <div class="d-grid">
                                <a href="/cuidadores/{{_id}}/reservar" class="btn btn-sm mybutton2 mb-2"> Reseva </a>
                                <a href="/cuidadores/{{_id}}" class="btn btn-sm mybutton3"> Detalles </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>



        </div>



    </div>


    <script src="./../../js/carers.js"></script>