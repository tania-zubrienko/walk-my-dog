<div class="container">

    <div class="row">
        <div class="col-6 col-lg-6 careerMap mb-5">
            <section class="dinamicMap">
                <h1>Lista de todos los cuidadores</h1>
                <figure class="carerMap" id="serviceMap"></figure>
            </section>
        </div>

        <div class="col-lg-6 mt-4">
            <div class="row">
                {{#each users}}
                <div class="col-4">
                    <div class="card mb-5">

                        <img class="card-img-top card-img" src={{avatar}} alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{name}}</h5>
                            <div class="overflow">
                                <p class="card-text">{{description}}</p>
                            </div>

                            <div class="d-grid">
                                <a href="/cuidadores/{{_id}}/reservar" class="btn btn-sm mybutton2 mb-2"> Reseva </a>
                                <a href="/cuidadores/{{_id}}" class="btn btn-sm mybutton3"> Detalles </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>



        </div>



    </div>


    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/services/map.services.js"></script>
    <script src="/js/carersMap.js"></script>
    <script async
        src="https://maps.googleapis.com/maps/api/js?v=beta&key=AIzaSyBELJh4BpgqopdZkRIAycagEfb0RTDCbvs&libraries=places&callback=renderAllCarers">
        </script>