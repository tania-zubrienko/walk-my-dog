<div class="container">
    <h1>Lista de todos los cuidadores</h1>
    <div class="row">
        <div class="col-6">
            <figure id="carerMap"></figure>
        </div>

        <div class="col-6">
            <div class="row">
                {{#each users}}
                <div class="col-6">
                    <div class="card mb-5" style="width: 15rem;">

                        <img class="card-img-top" src="images/holaaa.jpeg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{name}}</h5>
                            <p class="card-text">{{description}}</p>
                            <a href="/cuidadores/{{_id}}/reservar" class="btn mybutton">Reseva</a>
                            <a href="/cuidadores/{{_id}}" class="btn mybutton">Detalles</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>



        </div>



    </div>


    <script src="./../../js/carers.js"></script>