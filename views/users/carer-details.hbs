<div class="container details-carer">

    <div class="row">
        <div class=" colizq col-7 mr-3">


            <div class="row justify-content-between ">
                <div class="cont-avatar col-6 mt-4">
                    <img class="avatar mb-3" src="{{user.avatar}}" alt="">
                    <div class="description-cont">
                        <p><strong>Sobre mi:</strong> {{user.description}}</p>
                    </div>
                </div>
                <div class="col-6 mt-4">
                    <h1>Detalles de {{user.name}}</h1>
                    <p><strong>@</strong> {{user.username}}</p>
                    <p><strong>Nombre:</strong> {{user.name}}</p>
                    <p><strong>Email:</strong> {{user.email}}</p>

                    <h3>Localizaci√≥n</h3>
                    <figure id="carerDetailMap">
                    </figure>
                </div>
            </div>


        </div>
        <div class="col-4 ">

            <a href="/cuidadores/{{user._id}}/reservar" class="btn btn-block btn-lg mybutton mb-2"
                style="padding:2.5% 40%;">Reserva </a>
            <div class="colder p-3 d-flex flex-column justify-content-between">
                <section>
                    <h1>Comentarios</h1>
                    <div class="overflow-y-auto">
                        {{#each comments}}
                        <div class="card mt-3">
                            <div class="card-body">
                                {{content}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </section>
                <!-- Button trigger comment -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#comment">
                    Dejar comentario
                </button>
            </div>




        </div>

        <!-- Modal -->
        <div class="modal fade" id="comment" tabindex="-1" aria-labelledby="commentLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="commentLabel">Deja tu review para {{name}}</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <form action="/cuidadores/comentarios/{{user._id}}" method="post">
                            <div class="mb-3">
                                <label for="content" class="form-label">Comentarios</label>
                                <textarea type="textarea" class="form-control" id="content" name="content"
                                    rows="3"></textarea>
                            </div>

                            <div class="mb-3 d-flex align-items-center">
                                <label for="rating" class="form-label mb-0">Rating</label>
                                <div class="form-check form-check-inline emojiGroup">
                                    <input class="form-check-input" type="radio" name="rating" value="1">
                                    <label class="form-check-label emoji">üò∞</label>
                                </div>
                                <div class="form-check form-check-inline emojiGroup">
                                    <input class="form-check-input" type="radio" name="rating" value="2">
                                    <label class="form-check-label emoji">üòü</label>
                                </div>
                                <div class="form-check form-check-inline emojiGroup">
                                    <input class="form-check-input" type="radio" name="rating" value="3">
                                    <label class="form-check-label emoji">üòê</label>
                                </div>
                                <div class="form-check form-check-inline emojiGroup">
                                    <input class="form-check-input" type="radio" name="rating" value="4">
                                    <label class="form-check-label emoji">üòä</label>
                                </div>
                                <div class="form-check form-check-inline emojiGroup">
                                    <input class="form-check-input" type="radio" name="rating" value="5">
                                    <label class="form-check-label emoji">üòç</label>
                                </div>
                            </div>
                            <div class="modal-footer d-flex justify-content-between">
                                <button type="submit" class="btn mybutton">Publicar</button>
                                <button type="button" class="btn  mybutton" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>


    </div>

</div>
</div>
</div>
<input type="hidden" value="{{user.id}}" id="carerId">

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/services/map.services.js"></script>
<script src="/js/carersMap.js"></script>
